<div class="container">
    {{#if error}}
        <p>{{error}}</p>
    {{else}}
        <h1>Carrito {{cart.id}}</h1>
        {{#if cart.products.length}}
            <ul>
                {{#each cart.products}}
                    <li>
                        <strong>{{this.product.title}}</strong> -
                        Cantidad: {{this.quantity}} -
                        Precio: ${{this.product.price}}
                    </li>
                {{/each}}
            </ul>
        {{else}}
            <p>El carrito está vacío.</p>
        {{/if}}
    {{/if}}
</div>

